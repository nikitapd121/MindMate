  <style>
    :root {
      --light-bg: #f1f5f9;
      --light-text: #1e293b;
      --light-card: white;

      --dark-bg: #0f172a;
      --dark-text: #f8fafc;
      --dark-card: #1e293b;

      --primary: #2563eb;
    }

    html[data-theme="light"] {
      --bg: var(--light-bg);
      --text: var(--light-text);
      --card: var(--light-card);
    }

    html[data-theme="dark"] {
      --bg: var(--dark-bg);
      --text: var(--dark-text);
      --card: var(--dark-card);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg);
      color: var(--text);
      line-height: 1.6;
      transition: background-color 0.3s, color 0.3s;
      padding-top: 60px; /* space for fixed header */
    }

    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background-color: var(--bg);
      z-index: 2000;
      display: flex;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .container {
      max-width: 960px;
      margin: auto;
      padding: 2rem;
    }

    h1 {
      font-size: 2.4rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    p {
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }

    .highlight {
      font-weight: 600;
      color: var(--primary);
    }

    .card {
      background: var(--card);
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      margin-top: 2rem;
    }

    .toggle-theme {
      position: fixed;
      top: 70px;
      right: 1rem;
      background-color: var(--card);
      border: 1px solid #ccc;
      border-radius: 50%;
      padding: 0.5rem;
      font-size: 1.1rem;
      cursor: pointer;
      z-index: 1500;
    }

    ul {
      margin-left: 1.5rem;
      margin-bottom: 1rem;
    }

    ul li {
      margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 2rem;
      }

      .container {
        padding: 1.2rem;
      }
    }
  </style>
</head>
